    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <!-- Assim caso demore a carregar e para nao ficar a VIEW de 0.6 ALPHA ativa, a mostrar branco,
       fica o fundo unico-->
        <View
            android:id="@+id/no_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:alpha="1"
            android:background="@color/bg" />

        <ImageView
            android:id="@+id/ivMovieBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:visibility="visible" />

        <View
            android:id="@+id/vw_blacklayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:alpha="0.2"
            android:background="@color/bg" />


        <androidx.cardview.widget.CardView
            android:id="@+id/cvMoviPoster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/shadow_12655"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="2dp"
            app:cardElevation="0dp"
            app:cardPreventCornerOverlap="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/no_id"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

            <ImageView
                android:id="@+id/ivMoviePoster"
                android:layout_width="102dp"
                android:layout_height="150dp"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                tools:src="@drawable/f"
                android:transitionName="sharedName"/>

        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/tvYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tvGenres"
            android:layout_marginStart="16dp"
            android:paddingLeft="9dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white_80"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/cvMoviPoster"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.37"
            tools:text="Year" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvYear"
            android:layout_marginStart="16dp"
            android:layout_marginTop="6dp"
            android:paddingLeft="9dp"
            android:paddingRight="12dp"
            android:singleLine="false"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:textSize="17sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="@+id/no_id"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/cvMoviPoster"
            app:layout_constraintTop_toBottomOf="@+id/tvYear"
            tools:text="Title" />

        <TextView
            android:id="@+id/tvGenres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTitle"
            android:layout_marginStart="16dp"
            android:layout_marginTop="6dp"
            android:paddingLeft="9dp"
            android:paddingRight="12dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white_80"
            android:textSize="13sp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/cvMoviPoster"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle"
            tools:text="Genres" />

        <ImageView
            android:id="@+id/ivRatedStar"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            android:src="@mipmap/ic_rate_star"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cvMoviPoster" />

        <TextView
            android:id="@+id/tvMovieRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="6dp"
            android:layout_marginBottom="18dp"
            android:layout_toEndOf="@+id/ivRatedStar"
            android:paddingLeft="4dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/no_id"
            app:layout_constraintStart_toEndOf="@+id/ivRatedStar"
            tools:text="Rating" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/white_40"
        android:visibility="visible" />


</androidx.cardview.widget.CardView>